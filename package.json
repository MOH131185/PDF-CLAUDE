{
  "name": "pdf-tools-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "PDF Tools - Multi-platform application (Web, iOS, Android)",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=web",
    "dev:web": "npm run dev --workspace=web",
    "dev:mobile": "npm run start --workspace=mobile",
    "build": "npm run build --workspaces --if-present",
    "build:web": "npm run build --workspace=web",
    "build:mobile": "npm run build --workspace=mobile",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "install:all": "npm install",
    "postinstall": "npm run postinstall --workspaces --if-present"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MOH131185/PDF-CLAUDE.git"
  },
  "keywords": [
    "pdf",
    "tools",
    "merge",
    "split",
    "compress",
    "react-native",
    "nextjs",
    "monorepo",
    "cross-platform"
  ],
  "author": "PDF Tools Team",
  "license": "MIT"
}